@model TuristTravel.Model.Ponuda

@{
    ViewData["Title"] = "Edit Ponuda";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">Ponude List</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit Ponuda</li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="ID" />
            <input type="hidden" asp-for="DestinacijaID" />
            <input type="hidden" asp-for="HotelID" />

            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Opis" class="control-label"></label>
                <input asp-for="Opis" class="form-control" />
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cijena" class="control-label"></label>
                <input asp-for="Cijena" class="form-control" />
                <span asp-validation-for="Cijena" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="pocetakPutovanja" class="control-label"></label>
                <input asp-for="pocetakPutovanja" class="form-control" />
                <span asp-validation-for="pocetakPutovanja" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="krajPutovanja" class="control-label"></label>
                <input asp-for="krajPutovanja" class="form-control" />
                <span asp-validation-for="krajPutovanja" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DestinacijaID" class="control-label">Destinacija</label>
                <select asp-for="DestinacijaID" class="form-control" asp-items="ViewBag.PossibleDestinacije"></select>
                <span asp-validation-for="DestinacijaID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="HotelID" class="control-label">Hotel</label>
                <select asp-for="HotelID" class="form-control" asp-items="ViewBag.PossibleHoteli"></select>
                <span asp-validation-for="HotelID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
