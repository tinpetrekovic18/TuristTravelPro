@using TuristTravel.Model
@model List<Hotel>

@{
    ViewData["Title"] = "Hoteli";
}

<style>
    .form-inline .form-group {
        margin-right: 10px;
    }

    .form-inline {
        margin-bottom: 20px;
    }
</style>

<div style="margin-top: 20px;">
    <h4>Hoteli</h4>
    <form action="@Url.Action("AdvancedSearch")" method="post" class="form-inline">
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <input type="text" class="form-control" name="Naziv" placeholder="Pretraga po imenu">
                </div>
            </div>

            <div class="col">
                <div class="form-group">
                    <input type="number" class="form-control" name="brojZvjezdica" placeholder="Broj zvjezdica">
                </div>
            </div>

            <div class="col">
                <div class="form-group">
                    <input type="text" class="form-control" name="Adresa" placeholder="Pretraga po adresi">
                </div>
            </div>
            
            <div class="col">
                <div class="form-group">
                    <input type="number" class="form-control" name="cijenaNocenja" step="0.01" placeholder="Cijena noćenja">
                </div>
            </div>
            <div class="col">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
        </div>
    </form>
</div>

<div class="row">
    <div class="col-md-12">
        <a asp-action="Create" class="btn btn-success float-right">Dodaj novog</a>
    </div>
</div>

<table style="margin-top: 20px;" class="table table-condensed">
    <thead>
        <tr>
            <th>Naziv</th>
            <th>Broj Zvjezdica</th>
            <th>Adresa</th>
            <th>Cijena Noćenja</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ID">@item.Naziv</a>
                </td>
                <td>@item.brojZvjezdica</td>
                <td>@item.Adresa</td>
                <td>@item.cijenaNocenja</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">[edit]</a>
                </td>
            </tr>
        }
    </tbody>
</table>
